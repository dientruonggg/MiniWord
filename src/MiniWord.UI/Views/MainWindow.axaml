<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:controls="clr-namespace:MiniWord.UI.Controls"
        xmlns:vm="clr-namespace:MiniWord.UI.ViewModels"
        mc:Ignorable="d" d:DesignWidth="1000" d:DesignHeight="700"
        x:Class="MiniWord.UI.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Title="{Binding WindowTitle}"
        Width="1000" Height="700"
        Background="#F5F5F5">

    <Window.Resources>
        <!-- Blue Theme Colors -->
        <SolidColorBrush x:Key="PrimaryBlueBrush" Color="#2196F3"/>
        <SolidColorBrush x:Key="DarkBlueBrush" Color="#1976D2"/>
        <SolidColorBrush x:Key="LightBlueBrush" Color="#BBDEFB"/>
        <SolidColorBrush x:Key="AccentBlueBrush" Color="#0D47A1"/>
    </Window.Resources>

    <DockPanel LastChildFill="True">
        
        <!-- Menu Bar -->
        <Menu DockPanel.Dock="Top" Background="White">
            <MenuItem Header="_File">
                <MenuItem Header="_New" Command="{Binding NewInternalCommand}" HotKey="Ctrl+N"/>
                <MenuItem Header="_Open..." Command="{Binding OpenInternalCommand}" HotKey="Ctrl+O"/>
                <MenuItem Header="Open _Recent" Name="OpenRecentMenuItem">
                    <!-- Recent files submenu items will be dynamically populated -->
                </MenuItem>
                <Separator/>
                <MenuItem Header="_Save" Command="{Binding SaveInternalCommand}" HotKey="Ctrl+S"/>
                <MenuItem Header="Save _As..." Command="{Binding SaveAsInternalCommand}" HotKey="Ctrl+Shift+S"/>
                <Separator/>
                <MenuItem Header="E_xit" Command="{Binding ExitInternalCommand}"/>
            </MenuItem>
            <MenuItem Header="_Edit">
                <MenuItem Header="_Find/Replace..." Name="FindReplaceMenuItem" HotKey="Ctrl+F"/>
            </MenuItem>
        </Menu>
        
        <!-- Toolbar -->
        <Border DockPanel.Dock="Top" Background="{StaticResource PrimaryBlueBrush}" 
                Padding="10" BorderThickness="0,0,0,2" BorderBrush="{StaticResource DarkBlueBrush}">
            <StackPanel Orientation="Horizontal" Spacing="15">
                
                <TextBlock Text="MiniWord" FontSize="18" FontWeight="Bold" 
                          Foreground="White" VerticalAlignment="Center" Margin="0,0,30,0"/>
                
                <!-- Margin Controls -->
                <StackPanel Orientation="Horizontal" Spacing="10" VerticalAlignment="Center">
                    <TextBlock Text="Left Margin (mm):" Foreground="White" VerticalAlignment="Center"/>
                    <NumericUpDown Value="{Binding LeftMarginMm, Mode=TwoWay}" 
                                   Minimum="0" Maximum="100" 
                                   Increment="1" FormatString="F1"
                                   Width="80" Background="White"/>
                    <TextBlock x:Name="LeftMarginError" 
                              Foreground="Yellow" 
                              VerticalAlignment="Center"
                              FontWeight="Bold"
                              FontSize="12"
                              IsVisible="False"
                              Margin="5,0,0,0"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Spacing="10" VerticalAlignment="Center">
                    <TextBlock Text="Right Margin (mm):" Foreground="White" VerticalAlignment="Center"/>
                    <NumericUpDown Value="{Binding RightMarginMm, Mode=TwoWay}" 
                                   Minimum="0" Maximum="100" 
                                   Increment="1" FormatString="F1"
                                   Width="80" Background="White"/>
                    <TextBlock x:Name="RightMarginError"
                              Foreground="Yellow"
                              VerticalAlignment="Center"
                              FontWeight="Bold"
                              FontSize="12"
                              IsVisible="False"
                              Margin="5,0,0,0"/>
                </StackPanel>

                <Button Content="Apply Margins" 
                        Background="{StaticResource DarkBlueBrush}"
                        Foreground="White"
                        Padding="10,5"
                        Margin="10,0,0,0"
                        Command="{Binding ApplyMarginsCommand}"/>
                
                <!-- Separator -->
                <Rectangle Width="2" Fill="White" Opacity="0.3" Margin="10,0"/>
                
                <!-- Text Formatting Buttons (P5.3) -->
                <StackPanel Orientation="Horizontal" Spacing="5" VerticalAlignment="Center">
                    <TextBlock Text="Format:" Foreground="White" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    
                    <Button x:Name="BoldButton"
                            Content="B" 
                            FontWeight="Bold"
                            Background="White"
                            Foreground="{StaticResource DarkBlueBrush}"
                            Padding="10,5"
                            Width="35"
                            ToolTip.Tip="Bold (Ctrl+B)"/>
                    
                    <Button x:Name="ItalicButton"
                            Content="I" 
                            FontStyle="Italic"
                            Background="White"
                            Foreground="{StaticResource DarkBlueBrush}"
                            Padding="10,5"
                            Width="35"
                            ToolTip.Tip="Italic (Ctrl+I)"/>
                    
                    <Button x:Name="UnderlineButton"
                            Background="White"
                            Foreground="{StaticResource DarkBlueBrush}"
                            Padding="10,5"
                            Width="35"
                            ToolTip.Tip="Underline (Ctrl+U)">
                        <TextBlock Text="U" TextDecorations="Underline"/>
                    </Button>
                </StackPanel>
                
            </StackPanel>
        </Border>

        <!-- Ruler -->
        <Border DockPanel.Dock="Top" Background="White">
            <controls:RulerControl x:Name="RulerControl"/>
        </Border>

        <!-- Main Content - A4 Canvas -->
        <Border Background="#E0E0E0" Padding="20">
            <controls:A4Canvas x:Name="A4Canvas"/>
        </Border>

    </DockPanel>

</Window>

